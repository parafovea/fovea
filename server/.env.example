# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/fovea?schema=public"

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Model Service Configuration
MODEL_SERVICE_URL=http://localhost:8000

# Server Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# User Management Configuration
# Authentication mode: 'multi-user' (production, requires login) or 'single-user' (local dev, auto-login)
FOVEA_MODE=multi-user

# Allow user self-registration (true for open demos, false for private deployments)
ALLOW_REGISTRATION=false

# Session secret for cookie signing (generate with: openssl rand -base64 32)
SESSION_SECRET=your-secret-key-here-min-32-chars-use-openssl-rand-base64-32

# Session expiration in days
SESSION_TIMEOUT_DAYS=7

# Admin User Configuration (REQUIRED for multi-user mode seeding)
# Generate strong password: openssl rand -base64 32
ADMIN_PASSWORD=<set-strong-password-here>

# Optional test user password (defaults to 'test123' if not set)
TEST_USER_PASSWORD=<optional-test-password>

# API Key Encryption
API_KEY_ENCRYPTION_KEY=your-32-byte-hex-key-here

# Wikidata/Wikibase Configuration
# Mode: 'online' (public Wikidata API) or 'offline' (local Wikibase instance)
WIKIDATA_MODE=online
# API endpoint URL (only needed when WIKIDATA_MODE=offline or using custom endpoint)
WIKIDATA_URL=https://www.wikidata.org/w/api.php
# Path to ID mapping file (maps Wikidata Q-IDs to local Wikibase IDs)
# Only needed when WIKIDATA_MODE=offline
# WIKIBASE_ID_MAPPING_PATH=/wikibase/id-mapping.json

# External Links Configuration
# Master switch for all external links (default: true)
# ALLOW_EXTERNAL_LINKS=true
# Control Wikidata entity page links (in offline mode only; online mode always allows)
# ALLOW_EXTERNAL_WIKIDATA_LINKS=true
# Control video source links (uploaderUrl, webpageUrl)
# ALLOW_EXTERNAL_VIDEO_SOURCE_LINKS=true
